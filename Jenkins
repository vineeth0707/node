pipeline
{
	agent any
	environment
	{
		DOCKER_CREDENTIALS=credentials('vd')
		Image_Name="vs1ms24mc107/ndd"
	}
	stages
	{
		stage('checkout')
		{
			steps
			{
				git branch:"main", url:"git@github.com:vs1ms24mc107-wq/nd.git"
			}
		}
		stage('Build docker image')
		{
			steps
			{
				script{
					dockerImage=docker.build("${Image_Name}:latest")
				}
			}
		}
		stage('push to docker hub')
		{
			steps
			{
				script
				{
					docker.withRegistry("https://index.docker.io/v1/","vd")
					{
						dockerImage.push()
					}
				}
			}
		}
	}
	post
	{
		success
		{
			echo "pipeline successful"
		}
		failure
		{
			echo "pipeline failed"
		}
		always
		{
			echo "cleaning up workspace"
			deleteDir()
		}
	}
}
